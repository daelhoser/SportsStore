<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/twitter-bootstrap/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css"/>
    <title>SportsStore</title>
</head>
<body>
<div class="bg-dark text-white p-2">
    <div class="container-fluid">
        <div class="row">
            <span class="col navbar-brand">SPORTS STORE</span>
            <div class="col-6 text-right">
                @await Component.InvokeAsync("CartSummary")
                @*<vc:cart-summary></vc:cart-summary>*@
            </div>
        </div>
    </div>
</div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @* This is suppose to work on Core 3 (at least on the sports store code) but it doesn't.'  *@
            @*<vc:navigation-menu />*@

            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
